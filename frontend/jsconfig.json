{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "checkJs": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
